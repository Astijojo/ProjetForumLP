                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarsExampleDefault">
                    <ul class="navbar-nav mr-auto">
                    </ul>
                        <div class="btn-toolbar">
                            {% if app.user.username is defined %}
                            <button type="button" class="btn btn-dark mr-3" disabled>{{ app.user.username }}</button>
                            {% for role in app.user.roles %}
                                {% if role == "ROLE_USER" %}
                                    <a href="/profile" type="button" class="btn btn-secondary mr-3">Profil</a>
                                {% elseif role == "ROLE_ADMIN" %}
                                    <a href="/admin" type="button" class="btn btn-success mr-3">Administration</a>
                                {% endif %}
                            {% endfor %}
                            <a class="btn btn-primary" href="/logout" role="button"">Se dÃ©connecter</a>
                            {% else %}
                                <button type="button" class="btn btn-dark mr-3" disabled>InvitÃ©</button>
                                <a class="btn btn-primary" href="/login" role="button"">Se connecter</a>
                            {% endif %}
                        </div>
                </div>
            </nav>
        {% endblock %}
        <main role="main">
            <div class="jumbotron">
                {% if app.user.username is defined %}
                    <div class="container">
                        <h1 class="display-3">Bienvenue {{ app.user.username }} ðŸ”¥</h1>
                    </div>
                {% else %}
                    <div class="container">
