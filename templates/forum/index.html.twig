{% extends 'base.html.twig' %}

{% block content %}
    <div class="container">
        <div class="row">
            {% for categorie in categories %}
                <div class="col-md-4">
                    <h2>{{ categorie.getNomCate() }}</h2>
                    <p>(nombre) sujets</p>
                    <p><a class="btn btn-secondary" href="{{ path('categorie', {'idCategorie': categorie.getId()}) }}" role="button">Consulter</a></p>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}